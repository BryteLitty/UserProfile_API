<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">

{{> messages}}

{{#if username }}

<h2>{{ username }}'s profile</h2>
<table class="table">
    <tr>
        <td>Name: </td>
        <td>{{ name }}</td>
    </tr>
    <tr>
        <td>Github: </td>
        <td>{{ github }}</td>
    </tr>
    <tr>
        <td>Twitter: </td>
        <td>{{ twitter }}</td>
    </tr>
    <tr>
        <td>Facebook: </td>
        <td>{{ facebook }}</td>
    </tr>
</table>

{{/if}}